<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fasde.android.distanceapp">


    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application

        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/display_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-4053524672191361~9464073586"/>
        <activity android:name=".view.GeoActivity" />
        <activity
            android:name=".view.ListViewActivity"
            android:label="@string/display_name"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".view.SpielortDetailActivity"
            android:label="@string/display_name"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".view.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.KreisPickActivity"
            android:label="@string/display_name" />
        <activity android:name=".view.ImpressumActivity" />
    </application>

</manifest>